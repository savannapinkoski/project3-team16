<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textResult"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:onClick="onOption1"
            android:text="@string/firstOption"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:onClick="onOption1"
            android:text="@string/result"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPlace"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="@string/distance"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textOtherCloseParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otherParking"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSecondLot"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="onOption2"
            android:text="@string/secondOption"
            android:padding="8dp"
            android:layout_below="@id/textOtherCloseParking"
            android:layout_margin="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textThirdLot"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="onOption3"
            android:text="@string/thirdOption"
            android:layout_below="@id/textSecondLot"
            android:layout_margin="2dp"
            android:padding="8dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textFourthLot"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="onOption4"
            android:layout_margin="2dp"
            android:padding="8dp"

            android:text="@string/fourthOption"
            android:layout_below="@id/textThirdLot"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textFifthLot"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:padding="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="onOption5"
            android:text="@string/fifthOption"
            android:layout_below="@id/textFourthLot"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>