<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context="edu.msu.pinkoski.project3_team16.ResultActivity">


    <TextView
        android:id="@+id/textResult"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="onOption1"
        android:text="@string/result"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textPlace"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textResult"
        android:layout_margin="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/firstOption"/>

    <TextView
        android:id="@+id/textDistance"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textPlace"
        android:text="@string/distance"/>

    <TextView
        android:id="@+id/textOtherCloseParking"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDistance"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:text="@string/otherParking"/>

    <TextView
        android:id="@+id/textSecondLotLabel"
        android:layout_marginTop="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:gravity="end"
        android:layout_below="@+id/textOtherCloseParking"

        android:text="@string/second"/>

    <TextView
        android:id="@+id/textSecondLot"
        android:layout_marginEnd="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/textSecondLotLabel"
        android:layout_alignBaseline="@+id/textSecondLotLabel"
        android:layout_alignBottom="@+id/textSecondLotLabel"
        android:text="@string/secondOption"/>
    <TextView
        android:id="@+id/textThirdLotLabel"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:gravity="end"
        android:layout_below="@+id/textSecondLotLabel"
        android:text="@string/third"/>

    <TextView
        android:id="@+id/textThirdLot"
        android:layout_marginEnd="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/textThirdLotLabel"
        android:layout_alignBaseline="@+id/textThirdLotLabel"
        android:layout_alignBottom="@+id/textThirdLotLabel"
        android:text="@string/thirdOption"/>
    <TextView
        android:id="@+id/textFourthLotLabel"
        android:layout_marginTop="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:gravity="end"
        android:layout_below="@+id/textThirdLot"
        android:text="@string/fourth"/>

    <TextView
        android:id="@+id/textFourthLot"
        android:layout_marginEnd="8sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/textFourthLotLabel"
        android:layout_alignBaseline="@+id/textFourthLotLabel"
        android:layout_alignBottom="@+id/textFourthLotLabel"
        android:text="@string/fourthOption"/>

</RelativeLayout>